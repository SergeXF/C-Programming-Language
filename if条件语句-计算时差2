int main()
{
	int hour1, minute1;
	int hour2, minute2;
	printf("请输入第一个时间");
	scanf("%d %d", &hour1, &minute1);
	printf("请输入第二个时间");
	scanf("%d %d", &hour2, &minute2);
	int ih = hour2 - hour1;
	int im = minute2 - minute1;
	if (ih < 0)
	{
		if (im > 0)
		{
			ih++;
			im = 60 - im;
		}
	}
	if (im < 0)
	{
		ih--;
		im = 60 + im;
	}
	printf("时差%d:%d", ih, im);
	return 0;
}
